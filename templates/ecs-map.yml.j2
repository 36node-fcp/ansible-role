---
apiVersion: v1
kind: Service
metadata:
  name: ecs-map
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
      protocol: TCP
  selector:
    app: ecs-map
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ecs-map
spec:
  selector:
    matchLabels:
      app: ecs-map
  replicas: 1
  template:
    metadata:
      labels:
        app: ecs-map
    spec:
      containers:
        - name: nginx
          image: nginx:1.18.0
          ports:
            - containerPort: 80
          volumeMounts:
            - name: config-volume
              mountPath: /etc/nginx/conf.d
            - name: map-file-entry
              mountPath: /opt/map
      volumes:
        - name: config-volume
          configMap:
            name: nginx-conf
        - name: map-file-entry
          persistentVolumeClaim:
            claimName: pvc-map-file-entry
